<Window x:Class="Nim.Score"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Score" Height="300" Width="300">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFF05353" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>       
        <Viewbox>
            <GroupBox Header="HighScore" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Stretch" Height="300" Width="300" FontSize="25" Foreground="#FFD16464" HorizontalContentAlignment="Center">
            <Grid>
                <Label Name="displayc" HorizontalAlignment="Left" VerticalAlignment="Top" Height=" 75" Width="139" Content="CPU=" Foreground="#FF6D74FF"/>
                    <Label Name="displayp" HorizontalAlignment="Right" VerticalAlignment="Top" Height=" 75" Width="144" Content="You=" Foreground="#FF6D74FF"/>
                <Button Name="ok" Content="Continue" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="128" Click="Button_OK"/>
                <Button Name="new_game" Content="New_Game" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="134" Click="new_game_Click"/>
            </Grid>
        </GroupBox>
        </Viewbox>
    </Grid>
</Window>
